<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="ElectoralCollegeController">
    <GridPane alignment="CENTER" layoutX="4.0" layoutY="6.0" prefHeight="386.0" prefWidth="590.0"
              AnchorPane.bottomAnchor="6.0" AnchorPane.leftAnchor="4.0" AnchorPane.rightAnchor="4.0"
              AnchorPane.topAnchor="6.0">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints maxHeight="100.0" minHeight="10.0" prefHeight="50.0" vgrow="SOMETIMES"/>
            <RowConstraints maxHeight="800.0" minHeight="10.0" prefHeight="340.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <GridPane GridPane.rowIndex="1">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="600.0" minHeight="10.0" prefHeight="200.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="150.0" minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="150.0" minHeight="10.0" prefHeight="100.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <RadioButton fx:id="radioUnd" contentDisplay="CENTER" mnemonicParsing="false" onAction="#updateRadio"
                         prefHeight="20.0" prefWidth="200.0" selected="true" text="Undecided"
                         textAlignment="CENTER" userData="Undecided" GridPane.columnIndex="1"
                         GridPane.rowIndex="1">
                <toggleGroup>
                    <ToggleGroup fx:id="Choice"/>
                </toggleGroup>
                <font>
                    <Font name="Times New Roman" size="24.0"/>
                </font>
            </RadioButton>
            <RadioButton fx:id="radioDem" contentDisplay="CENTER" mnemonicParsing="false" onAction="#updateRadio"
                         prefHeight="20.0" prefWidth="200.0" text="Democrat" textAlignment="CENTER"
                         toggleGroup="$Choice" userData="Democrat" GridPane.rowIndex="1">
                <font>
                    <Font name="Times New Roman" size="24.0"/>
                </font>
            </RadioButton>
            <RadioButton fx:id="radioRep" contentDisplay="CENTER" mnemonicParsing="false" onAction="#updateRadio"
                         prefHeight="20.0" prefWidth="200.0" text="Republican" textAlignment="CENTER"
                         toggleGroup="$Choice" userData="Republican" GridPane.columnIndex="2"
                         GridPane.rowIndex="1">
                <font>
                    <Font name="Times New Roman" size="24.0"/>
                </font>
            </RadioButton>
            <TextField fx:id="repVotesField" alignment="CENTER" editable="false" prefHeight="100.0"
                       prefWidth="200.0" text="Republicans: 0 votes" GridPane.columnIndex="2"
                       GridPane.rowIndex="2">
                <font>
                    <Font name="Times New Roman" size="18.0"/>
                </font>
            </TextField>
            <TextField fx:id="demVotesField" alignment="CENTER" editable="false" prefHeight="100.0"
                       prefWidth="200.0" text="Democrats: 0 votes" GridPane.rowIndex="2">
                <font>
                    <Font name="Times New Roman" size="18.0"/>
                </font>
            </TextField>
            <TextField fx:id="winnerField" alignment="CENTER" editable="false" prefHeight="100.0" prefWidth="200.0"
                       promptText="Winner: None" GridPane.columnIndex="1" GridPane.rowIndex="2">
                <font>
                    <Font name="Times New Roman" size="18.0"/>
                </font>
            </TextField>
            <TextArea fx:id="recentResultsField" editable="false" prefHeight="200.0" prefWidth="200.0"
                      text="Recent Results:" wrapText="true" GridPane.columnIndex="2">
                <font>
                    <Font name="Times New Roman" size="12.0"/>
                </font>
            </TextArea>
            <ListView fx:id="stateListView" onMouseClicked="#updateListChoice" prefHeight="200.0" prefWidth="200.0"
                      GridPane.columnIndex="1"/>
            <TextArea fx:id="pollsField" editable="false" prefHeight="200.0" prefWidth="200.0"
                      promptText="Current Polls:" wrapText="true">
                <font>
                    <Font name="Times New Roman" size="24.0"/>
                </font>
            </TextArea>
        </GridPane>
        <Label alignment="CENTER" contentDisplay="CENTER" prefHeight="75.0" prefWidth="607.0"
               text="Electoral College Simulator" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
            <font>
                <Font name="Times New Roman" size="36.0"/>
            </font>
        </Label>
    </GridPane>
</AnchorPane>
